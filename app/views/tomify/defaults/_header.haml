- if header_image = setting(:header_image) && header_text = header_text.setting(:header_text)
  .navbar.navbar-default.center.header
    .container-fluid
      .row
        .col-lg-8.col-lg-offset-2
          .row
            .col-sm-3
              .navbar-header
                = link_to root_path, class: "navbar-brand" do
                  = image_tag(header_image.url, alt: "Logo")
            .col-sm-9
              .navbar-text
                %h3= header_text
